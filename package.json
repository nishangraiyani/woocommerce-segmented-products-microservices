{
  "name": "woocommerce",
  "version": "1.0.0",
  "description": "Full-stack microservices application for WooCommerce product segmentation",
  "private": true,
  "workspaces": [
    "packages/shared",
    "services/*",
    "app"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev:product-service": "npm run dev --workspace=product-service",
    "dev:segment-service": "npm run dev --workspace=segment-service",
    "dev:gateway-service": "npm run dev --workspace=gateway-service",
    "dev:app": "npm run dev --workspace=app",
    "start:product-service": "npm run start --workspace=product-service",
    "start:segment-service": "npm run start --workspace=segment-service",
    "start:gateway": "npm run start --workspace=gateway-service",
    "start:app": "npm run start --workspace=app",
    "build:app": "npm run build --workspace=app",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces"
  },
  "keywords": [
    "woocommerce",
    "microservices",
    "segmentation",
    "nodejs",
    "mongodb",
    "nextjs",
    "react"
  ],
  "author": "",
  "license": "ISC"
}
